<%- include("partials/header") -%>


<div class = "ui main container"> 
    <h1 class = "ui header">
        Edit your post
        <div class = "sub header">
            feel free to change everything
        </div>
    </h1>
    <a type = "button" class = "ui floated right gray button" href = "/blogs/<%= blog.id %>">
        Back
    </a>
    <form class="ui form" action = "/blogs/<%= blog._id %>?_method=PUT" method = "POST">
        <div class = "field">
            <label>Blog Header</label>
            <input type="text" name="blog[name]" value="<%= blog.name %>">
        </div> 
        <div class = "field">
            <label>Image</label>
            <input type="url" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class = "field">
            <label>Description</label>
            <textarea name = "blog[description]"><%= blog.description %></textarea>
        </div>
        <button type = "submit" class = "ui green button">
            Save!
        </button>
    </form>
    
</div>


<%- include("partials/footer") -%>