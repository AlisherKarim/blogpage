<%- include("partials/header") -%>

<div class = "ui main container">

    <div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      
      <div class="content">
        Create a new Account
      </div>
    </h2>
    <form class="ui large form" action = "/signup" method = "POST">
      <div class="ui stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="id badge outline icon"></i>
                <input type="text" name="name" placeholder="Name">
              </div>
            </div>
          
          
          
        <div class="field">
          <div class="ui left icon input">
            <i class="user outline icon"></i>
            <input type="text" name="username" placeholder="Username">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
          
            <!--  repeat password  -->
          <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" name="passwordRep" placeholder="Confirm Password">
              </div>
          </div>
          
          
        <button class="ui fluid large teal submit button" type = "submit">Create!</button>
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      Have an account? <a href="/login">Login</a>
    </div>
  </div>
</div>

</div>



<%- include("partials/footer") -%>